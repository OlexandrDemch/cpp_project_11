#include <iostream>

using namespace std;

bool binarySearch(double arr[], int left, int right, double x) {
    while (left <= right) {
        int mid = left + (right - left) / 2;

        if (arr[mid] == x) {
            return true;
        }
        if (arr[mid] > x) {
            right = mid - 1;
        }

        else {
            left = mid + 1;
        }
    }

    return false;
}

int main() {
    double arr[] = {1.2, 2.3, 3.5, 4.7, 5.8};
    int n = sizeof(arr) / sizeof(arr[0]);
    double x = 4.7;

    if (binarySearch(arr, 0, n - 1, x)) {
        cout << "Елемент знайдено!" << endl;
    }
    else {
        cout << "Елемент не знайдено!" << endl;
    }

    return 0;
}
